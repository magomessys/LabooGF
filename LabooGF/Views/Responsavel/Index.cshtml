                                <th>@Html.DisplayNameFor(model => model.Email)</th>
                            </tr>
                            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.ActionLink(@Html.DisplayFor(modelItem => item.Nome).ToString(), "Edit", new { id = item.IdResponsavel })</td>
